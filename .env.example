# ============================================================
# VoiceClone AI - Environment Configuration
# ============================================================
# Copy this file to .env and fill in the required values.
#   cp .env.example .env

# ------------------------------------------------------------
# Application
# ------------------------------------------------------------

# Display name shown in API docs and logs
APP_NAME=VoiceClone AI

# Semantic version (should match app/__init__.py)
APP_VERSION=1.0.0

# ASGI server bind address (use 127.0.0.1 for local-only access)
HOST=0.0.0.0

# ASGI server bind port
PORT=8000

# Enable debug mode (verbose logging, auto-reload). Values: true / false
DEBUG=false

# ------------------------------------------------------------
# Storage
# ------------------------------------------------------------

# Root directory for uploads, job artifacts, and generated output
STORAGE_DIR=storage

# ------------------------------------------------------------
# Hugging Face
# ------------------------------------------------------------

# Required for gated models (pyannote, Qwen TTS).
# Generate at: https://huggingface.co/settings/tokens
HF_TOKEN=

# ------------------------------------------------------------
# Demucs - Source Separation
# ------------------------------------------------------------

# Model variant: htdemucs | htdemucs_ft | mdx_extra
DEMUCS_MODEL=htdemucs

# ------------------------------------------------------------
# Whisper - Speech Transcription
# ------------------------------------------------------------

# Model size: tiny | base | small | medium | large-v2 | large-v3
WHISPER_MODEL=large-v3

# Compute device: auto | cpu | cuda
WHISPER_DEVICE=auto

# Numerical precision: float16 | float32 | int8
WHISPER_COMPUTE_TYPE=float16

# ------------------------------------------------------------
# TTS - Text to Speech
# ------------------------------------------------------------

# Hugging Face model ID for voice synthesis
QWEN_TTS_MODEL=Qwen/Qwen3-TTS-12Hz-1.7B-Base

# ------------------------------------------------------------
# Pyannote - Speaker Diarization
# ------------------------------------------------------------

# Hugging Face model ID for speaker diarization pipeline
PYANNOTE_MODEL=pyannote/speaker-diarization-3.1

# Minimum number of speakers to detect
MIN_SPEAKERS=1

# Maximum number of speakers to detect
MAX_SPEAKERS=10

# ------------------------------------------------------------
# Audio Processing
# ------------------------------------------------------------

# Target sample rate in Hz for all audio processing
SAMPLE_RATE=24000

# Default output audio container format: wav | mp3 | flac
OUTPUT_FORMAT=wav

# ------------------------------------------------------------
# External Tools
# ------------------------------------------------------------

# Path to ffmpeg binary (must be on PATH or provide absolute path)
FFMPEG_PATH=ffmpeg

# Path to ffprobe binary (must be on PATH or provide absolute path)
FFPROBE_PATH=ffprobe

# ------------------------------------------------------------
# Limits
# ------------------------------------------------------------

# Maximum upload file size in megabytes
MAX_FILE_SIZE_MB=500

# Duration in seconds for audio chunking during processing
CHUNK_DURATION_S=30
